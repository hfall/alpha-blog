<p align="center"><%= gravatar_for @user, size: 150 %><p>

<h4 align='center'><%= @user.username %></h4>
<% if logged_in? && current_user == @user %>
  <p align="center"><%= link_to "Delete Account", user_path(@user), method: :delete, data: { confirm: "Are you sure you would like to remove this account and all its articles?"} %></p>
<% end %>
