<h1 align="center"><%= "Category: " + @category.name %></h1>
<% if !@category.articles.any? %>
	<div class="alert alert-info" role="alert">Uh-oh! Looks like this category is empty! </div>
<% end %>
<div align="center">
	<% if logged_in? and current_user.admin? %>
	  <span class="badge badge-edit"><%= link_to "Edit Category Name", edit_category_path(@category) %></span> <br/>
	  <%= will_paginate @category_articles %>
	<% end %>
</div>
<%= render 'articles/article', obj: @category_articles %>
<div align="center">
  <%= will_paginate @category_articles %>
</div>